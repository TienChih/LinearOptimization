    <exercise xml:id="ex-solvesimplex">
      <introduction>
        <p>
          Solve the following using the Simplex Algorithm.
        </p>
      </introduction>
      
         
        <task>
        <statement>
          <p>
            <md>
              <mrow>\textbf{Maximize: }  f(x,y) = \amp -x+4y</mrow>
              <mrow>\textbf{Subject to: } x-y\amp \geq  2</mrow>
              <mrow> 2x-3y\amp \leq  10</mrow>
              <mrow> 5x+4y\amp \leq  64</mrow>
              <mrow> x,y\amp \geq  0.</mrow>
            </md>
          </p>
        </statement>
