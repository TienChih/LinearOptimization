  <definition xml:id="def-bounded">
    <statement>
      <p>
        A set <m>S</m> is bounded if there is a <m>r\geq 0</m> such that  <m>S\subseteq \bar{B}(\mathbf{0}, r)</m>.
      </p>
    </statement>
  </definition>

